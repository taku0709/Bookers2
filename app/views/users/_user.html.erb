
 <div class='container px-5 pm-sm-0'>
   <div class='row'>
     <vid class='col-md-3'>
       <h2>User info</h2>
       <table class='table'>
         <tr><%= attachment_image_tag user, :profile_image, :fill,100,100,format:'jpeg',fallback:"no_image.jpg" %></tr>
         <tr>
           <th>name</th>
           <th><%= user.name %></th>
         </tr>
         <tr>
           <th>introduction</th>
           <th><%= user.introduction %></th>
         </tr>
         <tr>
           <th colspan="2">
             <%= link_to edit_user_path(current_user.id), class: 'btn btn-default btn-block' do %>
              <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
             <% end %>
           </th>
         </tr>
       </table>
     </vid>
   </div>
 </div>

